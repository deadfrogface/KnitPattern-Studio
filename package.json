{
  "name": "knitpattern-studio",
  "version": "1.0.0",
  "description": "Windows-Desktop-Tool zur automatischen Generierung von Strickanleitungen",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "dist": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.knitpattern.studio",
    "productName": "KnitPattern Studio",
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": true
    }
  }
}
